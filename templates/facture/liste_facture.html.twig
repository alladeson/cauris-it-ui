{% extends "admin/layout/crud-layout.html.twig" %}

{% block title %}
	{{appName}}
	- Liste Factures
{% endblock %}

{% block page_content %}

	{# Filtre #}
	<div class="mt-2">
		<h5 class="font-size-14 mb-2">
			<i class="mdi mdi-arrow-right text-primary me-1"></i>
			Filtre : </h5>

		<form class="row gx-3 gy-2 align-items-center filtre-form">
			<div class="row mb-3 mt-3">
				<div class="col-lg-2 col-md-3 col-sm-3 col-4">
					<div class="form-check">
                        <input class="form-check-input" type="radio" name="dateRadios" id="createddAt"  value="createdAt">
                        <label class="form-check-label" for="createddAt">
							Émises le
						</label>
					</div>
                </div>
				<div class="col-lg-2 col-md-3 col-sm-3 col-5">
                    <div class="form-check">
						<input class="form-check-input" type="radio" name="dateRadios" id="confirmedAt" value="confirmedAt">
						<label class="form-check-label" for="confirmedAt">
							Validées le
						</label>
					</div>
				</div>
				<div class="col-lg-2 col-md-3 col-sm-3 col-3">
                    <div class="form-check form-switch mb-3" dir="ltr">
                        <input type="checkbox" class="form-check-input" id="getAll">
                        <label class="form-check-label" for="getAll">Toutes</label>
                    </div>
				</div>
            </div>
			<div class="row">
				<div class="col-lg-2 col-md-3 col-sm-3 mb-sm-0 mb-2">
					<label class="form-label font-size-13 text-muted" for="date-debut">Début</label>
					<input type="datetime-local" class="form-control" id="date-debut" name="date-debut" placeholder="" value="">
				</div>
				<div class="col-lg-2 col-md-3 col-sm-3 mb-sm-0 mb-2">
					<label class="form-label font-size-13 text-muted" for="date-fin">Fin</label>
					<input type="datetime-local" class="form-control" id="date-fin" name="date-fin" placeholder="" value="">
				</div>
				<div class="col-lg-4 col-md-5 col-sm-4 mb-sm-0 mb-2">
					<label for="type" class="form-label font-size-13 text-muted">Type de facture</label>
					<select class="form-control form-select" data-trigger name="type" id="type" placeholder=""></select>
				</div>
				<div class="col-auto mt-sm-4 mt-2 mb-sm-0 mb-2">
					<button type="submit" class="btn btn-primary" style="margin-bottom: -22px;">
						<i class="bx bx-search-alt align-middle"></i>
						<span class="d-sm-none">Rechercher</span>
					</button>
				</div>
			</div>
		</form>
	</div>
	<br>
	{# End Filtre #}

	<div class="row align-items-center">
		<div class="col-md-6 col-9">
			<div class="mb-3">
				<h5 class="card-title"> 
					<i class="mdi mdi-arrow-right text-primary me-1"></i>
						Tableau de liste des factures
					<span class="text-muted fw-normal ms-2"></span>
				</h5>
			</div>
		</div>

		<div class="col-md-6 col-3">
			<div class="d-flex flex-wrap align-items-center justify-content-end gap-2 mb-3">
				<div class="dropdown">
					<a class="btn btn-link text-muted py-1 font-size-16 shadow-none dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
						<i class="bx bx-dots-horizontal-rounded"></i>
					</a>

					<ul class="dropdown-menu dropdown-menu-end">
						<li>
							<a class="dropdown-item" onclick="listeFacture.reloadDatatable(event)" href="javascript:void(0);">Actualiser</a>
						</li>
						{# <li>
							<a class="dropdown-item" href="javascript:void(0);">Autre action</a>
						</li>
						<li>
							<a class="dropdown-item" href="javascript:void(0);">Quelque chose d'autre ici</a>
						</li> #}
					</ul>
				</div>
			</div>

		</div>
	</div>
	<!-- end row -->

	<div class="table-responsive mb-4">
		<table data-order='[[1, "desc"]]' class="table align-middle datatable dt-responsive table-check nowrap" style="border-collapse: collapse; border-spacing: 0 8px; width: 100%;">
			<thead>
				<tr>
					<th scope="col" style="width: 50px;">
						<div class="form-check font-size-16">
							<input type="checkbox" class="form-check-input" id="checkAll">
							<label class="form-check-label" for="checkAll"></label>
						</div>
					</th>
					<th scope="col">#</th>
					<th scope="col">Type</th>
					<th scope="col">Client</th>
					<th scope="col">Montant Total</th>
					<th scope="col">Statut</th>
					<th scope="col">Code MCeF</th>
					<th style="width: 80px; min-width: 80px;">Action</th>
				</tr>
			</thead>
			<tbody>
			</tbody>
		</table>
		<!-- end table -->
	</div>
	<!-- end table responsive -->

	{% include "facture/__facture_details.html.twig" %}
	<!-- /.modal -->

{% endblock %}

{% block page_custom_scripts %}
	<script>
		const URL_LIST_TYPE_FACTURE = "{{ url_list_type_facture }}";
		const URL_LIST_FACTURE_BY_TYPE = "{{ url_list_item_by_type }}";
		const URL_LIST_FACTURE_BY_TYPE_CREATED_DATE = "{{ url_list_item_by_type_created_date }}";
		const URL_LIST_FACTURE_BY_TYPE_CONFIRMED_DATE = "{{ url_list_item_by_type_confirmed_date }}";
		const URL_LIST_FACTURE_BY_CREATED_DATE = "{{ url_list_item_by_created_date }}";
		const URL_LIST_FACTURE_BY_CONFIRMED_DATE = "{{ url_list_item_confirmed_date }}";
	</script>
	<!-- init js -->
	<script src="{{ asset('assets/js/custom/facture/liste-facture.init.js') }}"></script>
{% endblock %}
