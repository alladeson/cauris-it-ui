<div class="modal fade webviwer-invoice-modal"
  id="validate-invoice-modal"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  role="dialog"
  aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-body d-flex justify-content-center">
        <!-- card -->
        <div class="card">
          <!-- card body -->
          <div class="card-body">
            <div class="d-flex flex-wrap justify-content-sm-between justify-content-center mb-4">
              <h5 class="card-title me-2 d-sm-inline d-none">
                Facture générée
              </h5>
              <div class="">
                <div>
                  <button type="button"
                    class="btn btn-soft-secondary btn-sm"
                    id="prev-page">
                    <i class="bx bx-chevron-left me-1"></i>
                  </button>
                  <button type="button" class="btn btn-soft-secondary btn-sm">
                    <input type="hidden"
                      style="width:40px;"
                      value="1"
                      id="current_page" />
                    <span id="page_num"></span>/<span id="page_count"></span>
                  </button>
                  <button type="button"
                    class="btn btn-soft-secondary btn-sm"
                    id="next-page">
                    <i class="bx bx-chevron-right me-1"></i>
                  </button>
                  <button type="button"
                    class="btn btn-soft-secondary btn-sm d-none d-sm-inline"
                    id="zoom_in">
                    <i class="bx bx-zoom-in me-1"></i>
                  </button>
                  <button type="button"
                    class="btn btn-soft-secondary btn-sm d-none d-sm-inline"
                    id="zoom_out">
                    <i class="bx bx-zoom-out me-1"></i>
                  </button>
                  <button type="button"
                    class="btn btn-soft-primary btn-sm"
                    id="pdf_printer">
                    <i class="bx bx-printer me-1"></i>
                  </button>
                  <a href="javascript:void(0);"
                    class="btn btn-soft-secondary btn-sm"
                    id="pdf_download">
                    <i class="bx bx-download me-1"></i>
                  </a>
                  <button type="button"
                    class="btn btn-soft-secondary btn-sm btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close">

                  </button>
                </div>
              </div>
            </div>
            <div class="row align-items-center">
              <!-- Canvas to place the PDF -->
              <canvas id="canvas" class="canvas__container"></canvas>
            </div>
          </div>
          <!-- end card -->
        </div>
        <!-- end col -->
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button type="reset" class="btn btn-primary" data-bs-dismiss="modal">
          Fermer
        </button>
        {# <button type="button" class="btn btn-primary" id="">Imprimer</button> #}
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
