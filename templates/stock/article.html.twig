{% extends "admin/layout/crud-layout.html.twig" %}

{% block title %}
	{{appName}}
	- Articles
{% endblock %}

{% block page_content %}

	<div class="row align-items-center">
		<div class="col-md-6">
			<div class="mb-3">
				<h5 class="card-title">Liste des articles
					<span class="text-muted fw-normal ms-2"></span>
				</h5>
			</div>
		</div>

		<div class="col-md-6">
			<div class="d-flex flex-wrap align-items-center justify-content-end gap-2 mb-3">
				{# <div>
					<ul class="nav nav-pills">
						<li class="nav-item">
							<a class="nav-link active" href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-placement="top" title="List">
								<i class="bx bx-list-ul"></i>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-placement="top" title="Grid">
								<i class="bx bx-grid-alt"></i>
							</a>
						</li>
					</ul>
				</div> #}
				<div onclick="article.newItemEvent(event)">
					<a href="javascript:void(0);" class="btn btn-light" data-bs-toggle="modal" data-bs-target=".add-new-modal">
						<i class="bx bx-plus me-1"></i>
						Nouvel Ajout</a>
				</div>

				<div class="dropdown">
					<a class="btn btn-link text-muted py-1 font-size-16 shadow-none dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
						<i class="bx bx-dots-horizontal-rounded"></i>
					</a>

					<ul class="dropdown-menu dropdown-menu-end">
						<li>
							<a class="dropdown-item" onclick="article.reloadDatatable(event)" href="javascript:void(0);">Actualiser</a>
						</li>
						{# <li>
							<a class="dropdown-item" href="javascript:void(0);">Autre action</a>
						</li>
						<li>
							<a class="dropdown-item" href="javascript:void(0);">Quelque chose d'autre ici</a>
						</li> #}
					</ul>
				</div>
			</div>

		</div>
	</div>
	<!-- end row -->

	<div class="table-responsive mb-4">
		<table data-order='[[1, "desc"]]' class="table align-middle datatable dt-responsive table-check nowrap" style="border-collapse: collapse; border-spacing: 0 8px; width: 100%;">
			<thead>
				<tr>
					<th>
						<div class="form-check font-size-16">
							<input type="checkbox" class="form-check-input" id="checkAll">
							<label class="form-check-label" for="checkAll"></label>
						</div>
					</th>
					<th>Référence</th>
					<th>Catégorie</th>
					<th>Désignation</th>
					<th>Prix</th>
					<th>Taxe</th>
					<th>Taxe spécifique</th>
					<th>Stock</th>
					<th>Stock de sécurité</th>
					<th style="width: 80px; min-width: 80px;">Action</th>
				</tr>
			</thead>
			<tbody>
			</tbody>
		</table>
		<!-- end table -->
	</div>
	<!-- end table responsive -->

	<div class="modal fade add-new-modal" id="add-new-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
			<div class="modal-content">
				<form method="post" class="" onsubmit="article.submitFormData(event)" >
					<div class="modal-header">
						<h5 class="modal-title">Nouvel ajout</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
						<div class="row">
							<div class="col-md-12">
								<div class="mb-3 position-relative">
									<input type="hidden" id="item-id" name="item-id" value="">
									<label for="categorie" class="form-label">Catégorie</label>
									<select required data-trigger class="form-control form-select" data-trigger name="categorie" id="categorie" placeholder="chercher...">
									</select>
								</div>
							</div>
						</div>
						<div class="row">						
							<div class="col-md-12">
								<div class="mb-3 position-relative">
									<label class="form-label" for="designation">Désignation</label>
									<div class="input-group">
										<input type="text" id="designation" name="designation" class="form-control" placeholder="Le nom de l'article" value="" required>
										{# <div class="invalid-tooltip">
											Please choose a unique and valid username.
										</div> #}
									</div>
								</div>
							</div>							
						</div>
						<div class="row">						
							<div class="col-md-12">
								<div class="mb-3 position-relative">
									<label for="taxe" class="form-label">Taxe</label>
									<select data-trigger required class="form-control form-select" data-trigger name="taxe" id="taxe" placeholder="chercher...">
									</select>
								</div>								
							</div>							
						</div>
						<div class="row">
							<div class="col-lg-6 col-md-6">
								<div class="mb-3 position-relative">
									<label class="form-label" for="prix">Prix</label>
									<div class="input-group">
										<span class="input-group-text" id="prixPrepend">FCFA</i></span>
										<input type="number" id="prix" name="prix" min="0" class="form-control" placeholder="Le prix T.T.C de l'article" aria-describedby="prixPrepend" required>
										{# <div class="invalid-tooltip">
											Please choose a unique and valid username.
										</div> #}
									</div>
								</div>
							</div>
							<div class="col-lg-6 col-md-6">
								<div class="mb-3 position-relative">
									<label class="form-label" for="taxe-specifique">Taxe spécifique</label>
									<input type="number" min="0" class="form-control" id="taxe-specifique" name="taxe-specifique" placeholder="La taxe spécifique si existante" value="">
									{# <div class="valid-tooltip">
										Parfait !
									</div> #}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-6 col-md-6">
								<div class="mb-3 position-relative">
									<label for="stock" class="form-label">Stock</label>
									<input required type="number" min="0" class="form-control" id="stock" name="stock" placeholder="Le stock de l'article" value="">
									</select>
								</div>
							</div>
							<div class="col-lg-6 col-md-6">
								<div class="mb-3 position-relative">
									<label class="form-label" for="stock-securite">Stock de sécurité</label>
									<input required type="number" min="0" class="form-control" id="stock-securite" name="stock-securite" placeholder="Le stock de sécurité de l'article" value="">
									{# <div class="valid-tooltip">
										Parfait !
									</div> #}
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="reset" class="btn btn-light" data-bs-dismiss="modal">Fermer</button>
						{# <button class="btn btn-primary" type="submit">Enregistrer</button> #}
						<button type="submit" class="btn btn-primary">Enregistrer</button>
					</div>
				</form>
			</div>
			<!-- /.modal-content -->
		</div>
		<!-- /.modal-dialog -->
	</div>
	<!-- /.modal -->

	<div class="modal fade show-item-modal" id="show-item-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Affichage</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="table-responsive">
                        <table class="table table-nowrap align-middle justify-content-center mb-0 item-show-table">
                            {# <thead>
                                <tr>
                                    <th scope="col" style="width: 50%;">
                                        Sweet Alert Type
                                    </th>
                                    <th scope="col" class="text-center">
                                        Sweet Alert Examples
                                    </th>
                                </tr>
                            </thead> #}
                            <tbody>                                                    
                                <tr>
                                    <th scope="row">
                                        Référence
                                    </th>
                                    <td class="text-center td-reference">
                                    </td>
                                </tr> 
								<tr>
                                    <th scope="row">
                                        Catégorie
                                    </th>
                                    <td class="text-center td-categorie">
                                    </td>
                                </tr>                                                    
                                <tr>
                                    <th scope="row">
                                        Désignation
                                    </th>
                                    <td class="text-center td-designation">
                                    </td>
                                </tr>
								<tr>
                                    <th scope="row">
                                        Prix
                                    </th>
                                    <td class="text-center td-prix">
                                    </td>
                                </tr>
								<tr>
                                    <th scope="row">
                                        Taxe
                                    </th>
                                    <td class="text-center td-taxe">
                                    </td>
                                </tr>
								<tr>
                                    <th scope="row">
                                        Taxe Spécifique
                                    </th>
                                    <td class="text-center td-ts">
                                    </td>
                                </tr>
								<tr>
                                    <th scope="row">
                                        Stock
                                    </th>
                                    <td class="text-center td-stock">
                                    </td>
                                </tr>
								<tr>
                                    <th scope="row">
                                        Stock de sécurité
                                    </th>
                                    <td class="text-center td-stock-securite">
                                    </td>
                                </tr>                                                      
                            </tbody>
                        </table>
                        <!-- end table -->
                    </div>
				</div>
				<div class="modal-footer d-flex justify-content-center">
					<button type="button" class="btn btn-info" data-bs-dismiss="modal">Fermer</button>
				</div>
			</div>
			<!-- /.modal-content -->
		</div>
		<!-- /.modal-dialog -->
	</div>
	<!-- /.modal -->

{% endblock %}

{% block page_custom_scripts %}

    <!-- Liste des constantes -->
	<script>
		const URL_LIST_CATEGORIE_ARTICLE = "{{url_list_categorie_article}}";
		const URL_LIST_TAXE = "{{url_list_taxe}}";
	</script>

	<!-- init js -->
	<script src="{{ asset('assets/js/custom/stock/article.init.js') }}"></script>
{% endblock %}
